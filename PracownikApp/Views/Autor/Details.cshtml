@model AppData.Data.Sklep.Autor

@{
    ViewData["Title"] = "Szczegóły autora";
}

<div class="container py-5 min-vh-100">

    <section class="text-center mb-5">
        <div class="bg-info bg-gradient text-white rounded-5 shadow-lg py-4 px-3">
            <h1 class="display-4 fw-bold">
                <i class="bi bi-person-badge me-3"></i> Szczegóły autora
            </h1>
            <p class="lead mb-0">Podgląd szczegółowych informacji o autorze</p>
        </div>
    </section>

    <article class="card shadow rounded-4 border-0 mx-auto" style="max-width: 700px;">
        <div class="rounded-top" style="height: 6px; background: linear-gradient(to right, #0dcaf0, #6610f2);"></div>
        <div class="card-body px-5 py-4">
            <h2 class="card-title fw-semibold mb-4 text-primary">Autor #@Model.AutorID</h2>

            <dl class="row mb-5">
                <dt class="col-md-4 text-muted fw-semibold">Imię</dt>
                <dd class="col-md-8 fs-5">@Model.Imie</dd>

                <dt class="col-md-4 text-muted fw-semibold">Nazwisko</dt>
                <dd class="col-md-8 fs-5">@Model.Nazwisko</dd>
            </dl>

            <div class="d-flex justify-content-start gap-3">
                <a asp-action="Edit" asp-route-id="@Model.AutorID" class="btn btn-outline-info shadow-sm d-flex align-items-center gap-2">
                    <i class="bi bi-pencil-square"></i> Edytuj autora
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary shadow-sm d-flex align-items-center gap-2">
                    <i class="bi bi-arrow-left-circle"></i> Wróć do listy
                </a>
            </div>
        </div>
    </article>

</div>
