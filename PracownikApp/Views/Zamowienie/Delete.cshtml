@model AppData.Data.Sklep.Zamowienie

@{
    ViewData["Title"] = "Usuń zamówienie";
}

<div class="container py-5 min-vh-100">

    <div class="bg-danger bg-gradient text-white rounded-4 shadow-sm p-4 mb-5 text-center">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-trash3 me-2"></i> Usuń zamówienie
        </h1>
        <p class="mb-0">Czy na pewno chcesz usunąć to zamówienie? Akcja jest nieodwracalna.</p>
    </div>

    <div class="card shadow-sm rounded-4 border-0 mx-auto" style="max-width: 600px;">
        <div style="height: 8px; background: linear-gradient(90deg, #dc3545, #a71d2a);" class="rounded-top"></div>
        <div class="card-body">
            <h3 class="card-title fw-bold mb-4">Zamówienie z dnia @Model.DataZamowienia.ToString("yyyy-MM-dd")</h3>

            <dl class="row mb-4">
                <dt class="col-sm-4 text-secondary">Data zamówienia</dt>
                <dd class="col-sm-8">@Model.DataZamowienia.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4 text-secondary">Użytkownik</dt>
                <dd class="col-sm-8">@Html.Raw(Model.Uzytkownik?.Email ?? "<em>Brak danych</em>")</dd>

                <dt class="col-sm-4 text-secondary">Kupon</dt>
                <dd class="col-sm-8">@Html.Raw(Model.Kupon?.Kod ?? "<em>Brak kuponu</em>")</dd>

                <dt class="col-sm-4 text-secondary">Status</dt>
                <dd class="col-sm-8">@Model.Status</dd>

                <dt class="col-sm-4 text-secondary">Adres dostawy</dt>
                <dd class="col-sm-8">@Model.AdresDostawy</dd>

                <dt class="col-sm-4 text-secondary">Kwota całkowita</dt>
                <dd class="col-sm-8">@Model.KwotaCalkowita.ToString()</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex gap-3">
                <input type="hidden" asp-for="ZamowienieID" />
                <button type="submit" class="btn btn-danger d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-trash3-fill"></i> Usuń
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-arrow-left-circle"></i> Anuluj
                </a>
            </form>
        </div>
    </div>

</div>
