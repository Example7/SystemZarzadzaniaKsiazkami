@model AppData.Data.Sklep.Ksiazka

@{
    ViewData["Title"] = "Edytuj książkę";
}

<div class="container py-5 min-vh-100">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-pencil-square me-2"></i> Edytuj książkę
        </h1>
        <p class="text-muted">Zmieniaj szczegóły wybranej książki</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <form asp-action="Edit" novalidate>
                <input type="hidden" asp-for="KsiazkaID" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-4">
                    <label asp-for="Tytul" class="form-label fw-semibold"></label>
                    <input asp-for="Tytul" class="form-control form-control-lg" />
                    <span asp-validation-for="Tytul" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ISBN" class="form-label fw-semibold"></label>
                    <input asp-for="ISBN" class="form-control form-control-lg" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Cena" class="form-label fw-semibold"></label>
                    <input asp-for="Cena" type="number" step="0.01" class="form-control form-control-lg" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Opis" class="form-label fw-semibold"></label>
                    <textarea asp-for="Opis" class="form-control form-control-lg" rows="3"></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="DataWydania" class="form-label fw-semibold"></label>
                    <input asp-for="DataWydania" type="date" class="form-control form-control-lg" />
                    <span asp-validation-for="DataWydania" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="OkladkaUrl" class="form-label fw-semibold"></label>
                    <input asp-for="OkladkaUrl" class="form-control form-control-lg" />
                    <span asp-validation-for="OkladkaUrl" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="AutorID" class="form-label fw-semibold"></label>
                    <select asp-for="AutorID" class="form-select form-select-lg" asp-items="ViewBag.AutorID"></select>
                    <span asp-validation-for="AutorID" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="WydawnictwoID" class="form-label fw-semibold"></label>
                    <select asp-for="WydawnictwoID" class="form-select form-select-lg" asp-items="ViewBag.WydawnictwoID"></select>
                    <span asp-validation-for="WydawnictwoID" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="KategoriaID" class="form-label fw-semibold"></label>
                    <select asp-for="KategoriaID" class="form-select form-select-lg" asp-items="ViewBag.KategoriaID"></select>
                    <span asp-validation-for="KategoriaID" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary btn-lg d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-check2-circle"></i> Zapisz zmiany
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-x-circle"></i> Anuluj
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
