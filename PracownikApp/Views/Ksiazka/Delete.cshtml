@model AppData.Data.Sklep.Ksiazka

@{
    ViewData["Title"] = "Usuń książkę";
}

<div class="container py-5 min-vh-100">

    <div class="bg-danger bg-gradient text-white rounded-4 shadow-sm p-4 mb-5 text-center">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-trash3 me-2"></i> Usuń książkę
        </h1>
        <p class="mb-0">Czy na pewno chcesz usunąć tę książkę? Ta akcja jest nieodwracalna.</p>
    </div>

    <div class="card shadow-sm rounded-4 border-0 mx-auto" style="max-width: 700px;">
        <div style="height: 8px; background: linear-gradient(90deg, #dc3545, #a71d2a);" class="rounded-top"></div>
        <div class="card-body">
            <h3 class="card-title fw-bold mb-4">@Model.Tytul</h3>

            <dl class="row mb-4">
                <dt class="col-sm-4 text-secondary">Tytuł</dt>
                <dd class="col-sm-8">@Model.Tytul</dd>

                <dt class="col-sm-4 text-secondary">ISBN</dt>
                <dd class="col-sm-8">@Model.ISBN</dd>

                <dt class="col-sm-4 text-secondary">Cena</dt>
                <dd class="col-sm-8">@Model.Cena.ToString("C")</dd>

                <dt class="col-sm-4 text-secondary">Opis</dt>
                <dd class="col-sm-8">@Model.Opis</dd>

                <dt class="col-sm-4 text-secondary">Data wydania</dt>
                <dd class="col-sm-8">@Model.DataWydania?.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4 text-secondary">Okładka URL</dt>
                <dd class="col-sm-8">@Model.OkladkaUrl</dd>

                <dt class="col-sm-4 text-secondary">Autor</dt>
                <dd class="col-sm-8">@Html.Raw(Model.Autor?.ImieNazwisko ?? "<em>Brak danych</em>")</dd>

                <dt class="col-sm-4 text-secondary">Wydawnictwo</dt>
                <dd class="col-sm-8">@Html.Raw(Model.Wydawnictwo?.Nazwa ?? "<em>Brak danych</em>")</dd>

                <dt class="col-sm-4 text-secondary">Kategoria</dt>
                <dd class="col-sm-8">@Html.Raw(Model.Kategoria?.Nazwa ?? "<em>Brak danych</em>")</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex gap-3">
                <input type="hidden" asp-for="KsiazkaID" />
                <button type="submit" class="btn btn-danger d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-trash3-fill"></i> Usuń
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-arrow-left-circle"></i> Anuluj
                </a>
            </form>
        </div>
    </div>

</div>
