@model AppData.Data.Sklep.Ksiazka

@{
    ViewData["Title"] = "Dodaj nową książkę";
}

<div class="container py-5 min-vh-100">

    <div class="bg-primary bg-gradient text-white rounded-4 shadow-sm p-4 mb-4 text-center">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-plus-square me-2"></i> Dodaj nową książkę
        </h1>
        <p class="mb-0">Wypełnij formularz, aby dodać książkę do bazy</p>
    </div>

    <div class="card shadow-sm rounded-4 border-0 mx-auto" style="max-width: 600px;">
        <div style="height: 8px; background: linear-gradient(90deg, #0d6efd, #0a58ca);" class="rounded-top"></div>
        <div class="card-body">

            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Tytul" class="form-label"></label>
                    <input asp-for="Tytul" class="form-control" />
                    <span asp-validation-for="Tytul" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ISBN" class="form-label"></label>
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cena" class="form-label"></label>
                    <input asp-for="Cena" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Opis" class="form-label"></label>
                    <textarea asp-for="Opis" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataWydania" class="form-label"></label>
                    <input asp-for="DataWydania" type="date" class="form-control" />
                    <span asp-validation-for="DataWydania" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OkladkaUrl" class="form-label"></label>
                    <input asp-for="OkladkaUrl" class="form-control" />
                    <span asp-validation-for="OkladkaUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Autor" class="form-label"></label>
                    <select asp-for="Autor" class="form-select" asp-items="ViewBag.AutorID"></select>
                    <span asp-validation-for="Autor" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WydawnictwoID" class="form-label"></label>
                    <select asp-for="WydawnictwoID" class="form-select" asp-items="ViewBag.WydawnictwoID"></select>
                    <span asp-validation-for="WydawnictwoID" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="KategoriaID" class="form-label"></label>
                    <select asp-for="KategoriaID" class="form-select" asp-items="ViewBag.KategoriaID"></select>
                    <span asp-validation-for="KategoriaID" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-check2-circle"></i> Dodaj książkę
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-arrow-left-circle"></i> Powrót do listy
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
