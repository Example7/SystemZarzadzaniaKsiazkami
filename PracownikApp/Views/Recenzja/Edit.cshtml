@model AppData.Data.Sklep.Recenzja

@{
    ViewData["Title"] = "Edytuj recenzję";
}

<div class="container py-5 min-vh-100">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-pencil-square me-2"></i> Edytuj recenzję
        </h1>
        <p class="text-muted">Zmieniaj szczegóły wybranej recenzji</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <form asp-action="Edit" novalidate>
                <input type="hidden" asp-for="RecenzjaID" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-4">
                    <label asp-for="Ocena" class="form-label fw-semibold"></label>
                    <input asp-for="Ocena" type="number" min="1" max="5" class="form-control form-control-lg" />
                    <span asp-validation-for="Ocena" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Tresc" class="form-label fw-semibold"></label>
                    <textarea asp-for="Tresc" class="form-control form-control-lg" rows="4"></textarea>
                    <span asp-validation-for="Tresc" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="DataDodania" class="form-label fw-semibold"></label>
                    <input asp-for="DataDodania" type="date" class="form-control form-control-lg" />
                    <span asp-validation-for="DataDodania" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="KsiazkaID" class="form-label fw-semibold"></label>
                    <select asp-for="KsiazkaID" class="form-select form-select-lg" asp-items="ViewBag.KsiazkaID"></select>
                    <span asp-validation-for="KsiazkaID" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="UzytkownikID" class="form-label fw-semibold"></label>
                    <select asp-for="UzytkownikID" class="form-select form-select-lg" asp-items="ViewBag.UzytkownikID"></select>
                    <span asp-validation-for="UzytkownikID" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary btn-lg d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-check2-circle"></i> Zapisz zmiany
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-x-circle"></i> Anuluj
                    </a>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
