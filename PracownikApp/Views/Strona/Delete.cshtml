@model AppData.Data.CMS.Strona

@{
    ViewData["Title"] = "Usuń stronę";
}

<div class="container py-5 min-vh-100">

    <div class="bg-danger bg-gradient text-white rounded-4 shadow-sm p-4 mb-5 text-center">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-trash3 me-2"></i> Usuń stronę CMS
        </h1>
        <p class="mb-0">Czy na pewno chcesz usunąć tę stronę? Akcja jest nieodwracalna.</p>
    </div>

    <div class="card shadow-sm rounded-4 border-0">
        <div style="height: 8px; background: linear-gradient(90deg, #dc3545, #a71d2a);" class="rounded-top"></div>
        <div class="card-body">
            <h3 class="card-title fw-bold mb-4">@Model.Tytul</h3>

            <dl class="row mb-4">
                <dt class="col-sm-3 text-secondary">Link tytuł</dt>
                <dd class="col-sm-9">@Model.LinkTytul</dd>

                <dt class="col-sm-3 text-secondary">Pozycja</dt>
                <dd class="col-sm-9">@Model.Pozycja</dd>

                <dt class="col-sm-3 text-secondary align-self-start">Treść</dt>
                <dd class="col-sm-9" style="white-space: pre-wrap;">
                    @if (!string.IsNullOrEmpty(Model.Tresc))
                    {
                        @Html.Raw(Model.Tresc)
                    }
                    else
                    {
                        <em class="text-muted">Brak treści do wyświetlenia</em>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex gap-3">
                <input type="hidden" asp-for="IdStrony" />
                <button type="submit" class="btn btn-danger d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-trash3-fill"></i> Usuń
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-arrow-left-circle"></i> Anuluj
                </a>
            </form>
        </div>
    </div>

</div>
