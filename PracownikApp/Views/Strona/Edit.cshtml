@model AppData.Data.CMS.Strona

@{
    ViewData["Title"] = "Edytuj stronę";
}

<div class="container py-5 min-vh-100">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-pencil-square me-2"></i> Edytuj stronę CMS
        </h1>
        <p class="text-muted">Zmieniaj szczegóły i treść wybranej strony</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <form asp-action="Edit" novalidate>
                <input type="hidden" asp-for="IdStrony" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-4">
                    <label asp-for="LinkTytul" class="form-label fw-semibold"></label>
                    <input asp-for="LinkTytul" class="form-control form-control-lg" />
                    <span asp-validation-for="LinkTytul" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Tytul" class="form-label fw-semibold"></label>
                    <input asp-for="Tytul" class="form-control form-control-lg" />
                    <span asp-validation-for="Tytul" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Tresc" class="form-label fw-semibold"></label>
                    <textarea asp-for="Tresc" rows="6" class="form-control form-control-lg"></textarea>
                    <span asp-validation-for="Tresc" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Pozycja" class="form-label fw-semibold"></label>
                    <input asp-for="Pozycja" type="number" class="form-control form-control-lg" />
                    <span asp-validation-for="Pozycja" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary btn-lg d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-check2-circle"></i> Zapisz zmiany
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-x-circle"></i> Anuluj
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
