@model AppData.Data.Sklep.Kupon

@{
    ViewData["Title"] = "Dodaj nowy kupon";
}

<div class="container py-5 min-vh-100">

    <div class="bg-primary bg-gradient text-white rounded-4 shadow-sm p-4 mb-4 text-center">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-plus-square me-2"></i> Dodaj nowy kupon
        </h1>
        <p class="mb-0">Wypełnij formularz, aby dodać nowy kupon do systemu</p>
    </div>

    <div class="card shadow-sm rounded-4 border-0 mx-auto" style="max-width: 600px;">
        <div style="height: 8px; background: linear-gradient(90deg, #0d6efd, #0a58ca);" class="rounded-top"></div>
        <div class="card-body">

            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Kod" class="form-label"></label>
                    <input asp-for="Kod" class="form-control" />
                    <span asp-validation-for="Kod" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TypZnizki" class="form-label"></label>
                    <select asp-for="TypZnizki" class="form-select" asp-items="ViewBag.TypZnizki"></select>
                    <span asp-validation-for="TypZnizki" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WartoscZnizki" class="form-label"></label>
                    <input asp-for="WartoscZnizki" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="WartoscZnizki" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataWaznosci" class="form-label"></label>
                    <input asp-for="DataWaznosci" type="date" class="form-control" />
                    <span asp-validation-for="DataWaznosci" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MinimalnaWartosc" class="form-label"></label>
                    <input asp-for="MinimalnaWartosc" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="MinimalnaWartosc" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="CzyAktywny" class="form-check-input" />
                    <label asp-for="CzyAktywny" class="form-check-label"></label>
                    <span asp-validation-for="CzyAktywny" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-check2-circle"></i> Dodaj kupon
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-arrow-left-circle"></i> Powrót do listy
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
