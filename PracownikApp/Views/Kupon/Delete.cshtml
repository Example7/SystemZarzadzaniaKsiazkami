@model AppData.Data.Sklep.Kupon

@{
    ViewData["Title"] = "Usuń kupon";
}

<div class="container py-5 min-vh-100">

    <div class="bg-danger bg-gradient text-white rounded-4 shadow-sm p-4 mb-5 text-center">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-trash3 me-2"></i> Usuń kupon
        </h1>
        <p class="mb-0">Czy na pewno chcesz usunąć ten kupon? Akcja jest nieodwracalna.</p>
    </div>

    <div class="card shadow-sm rounded-4 border-0 mx-auto" style="max-width: 600px;">
        <div style="height: 8px; background: linear-gradient(90deg, #dc3545, #a71d2a);" class="rounded-top"></div>
        <div class="card-body">
            <h3 class="card-title fw-bold mb-4">Kupon: @Model.Kod</h3>

            <dl class="row mb-4">
                <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(m => m.Kod)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.Kod)</dd>

                <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(m => m.TypZnizki)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.TypZnizki)</dd>

                <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(m => m.WartoscZnizki)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.WartoscZnizki)</dd>

                <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(m => m.DataWaznosci)</dt>
                <dd class="col-sm-8">@Model.DataWaznosci.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(m => m.MinimalnaWartosc)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.MinimalnaWartosc)</dd>

                <dt class="col-sm-4 text-secondary">@Html.DisplayNameFor(m => m.CzyAktywny)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(m => m.CzyAktywny)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex gap-3">
                <input type="hidden" asp-for="KuponID" />
                <button type="submit" class="btn btn-danger d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-trash3-fill"></i> Usuń
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-arrow-left-circle"></i> Anuluj
                </a>
            </form>
        </div>
    </div>

</div>
