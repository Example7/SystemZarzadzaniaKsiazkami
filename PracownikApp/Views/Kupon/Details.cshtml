@model AppData.Data.Sklep.Kupon

@{
    ViewData["Title"] = "Szczegóły kuponu";
}

<div class="container py-5 min-vh-100">

    <section class="text-center mb-5">
        <div class="bg-info bg-gradient text-white rounded-5 shadow-lg py-4 px-3">
            <h1 class="display-4 fw-bold">
                <i class="bi bi-ticket-perforated me-3"></i> Szczegóły kuponu
            </h1>
            <p class="lead mb-0">Podgląd szczegółowych informacji o kuponie</p>
        </div>
    </section>

    <article class="card shadow rounded-4 border-0 mx-auto" style="max-width: 700px;">
        <div class="rounded-top" style="height: 6px; background: linear-gradient(to right, #0dcaf0, #6610f2);"></div>
        <div class="card-body px-5 py-4">
            <h2 class="card-title fw-semibold mb-4 text-primary">Kupon: @Model.Kod</h2>

            <dl class="row mb-5">
                <dt class="col-md-4 text-muted fw-semibold">@Html.DisplayNameFor(m => m.Kod)</dt>
                <dd class="col-md-8 fs-5">@Html.DisplayFor(m => m.Kod)</dd>

                <dt class="col-md-4 text-muted fw-semibold">@Html.DisplayNameFor(m => m.TypZnizki)</dt>
                <dd class="col-md-8 fs-5">@Model.TypZnizki.ToString()</dd>

                <dt class="col-md-4 text-muted fw-semibold">@Html.DisplayNameFor(m => m.WartoscZnizki)</dt>
                <dd class="col-md-8 fs-5">@Html.DisplayFor(m => m.WartoscZnizki)</dd>

                <dt class="col-md-4 text-muted fw-semibold">@Html.DisplayNameFor(m => m.DataWaznosci)</dt>
                <dd class="col-md-8 fs-5">@Model.DataWaznosci.ToString("yyyy-MM-dd")</dd>

                <dt class="col-md-4 text-muted fw-semibold">@Html.DisplayNameFor(m => m.MinimalnaWartosc)</dt>
                <dd class="col-md-8 fs-5">@Html.DisplayFor(m => m.MinimalnaWartosc)</dd>

                <dt class="col-md-4 text-muted fw-semibold">@Html.DisplayNameFor(m => m.CzyAktywny)</dt>
                <dd class="col-md-8 fs-5">@Html.DisplayFor(m => m.CzyAktywny)</dd>
            </dl>

            <div class="d-flex justify-content-start gap-3">
                <a asp-action="Edit" asp-route-id="@Model.KuponID" class="btn btn-outline-info shadow-sm d-flex align-items-center gap-2">
                    <i class="bi bi-pencil-square"></i> Edytuj kupon
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary shadow-sm d-flex align-items-center gap-2">
                    <i class="bi bi-arrow-left-circle"></i> Wróć do listy
                </a>
            </div>
        </div>
    </article>

</div>
