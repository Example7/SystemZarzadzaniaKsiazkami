@model AppData.Data.Sklep.ZamowienieKsiazka

@{
    ViewData["Title"] = "Usuń pozycję zamówienia";
}

<div class="container py-5 min-vh-100">

    <div class="bg-danger bg-gradient text-white rounded-4 shadow-sm p-4 mb-5 text-center">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-trash3 me-2"></i> Usuń pozycję zamówienia
        </h1>
        <p class="mb-0">Czy na pewno chcesz usunąć tę pozycję zamówienia? Akcja jest nieodwracalna.</p>
    </div>

    <div class="card shadow-sm rounded-4 border-0 mx-auto" style="max-width: 600px;">
        <div style="height: 8px; background: linear-gradient(90deg, #dc3545, #a71d2a);" class="rounded-top"></div>
        <div class="card-body">
            <h3 class="card-title fw-bold mb-4">
                Pozycja zamówienia: zamówienie #@Model.ZamowienieID, książka @Model.Ksiazka?.ISBN
            </h3>

            <dl class="row mb-4">
                <dt class="col-sm-4 text-secondary">Zamówienie ID</dt>
                <dd class="col-md-8 fs-5">
                    @if (Model.Zamowienie != null)
                    {
                        @Model.Zamowienie.ZamowienieID
                    }
                    else
                    {
                        @Html.Raw("<em>Brak danych</em>")
                    }

                </dd>

                <dt class="col-sm-4 text-secondary">Książka</dt>
                <dd class="col-sm-8">@Html.Raw(Model.Ksiazka?.Tytul ?? "<em>Brak danych</em>")</dd>

                <dt class="col-sm-4 text-secondary">Ilość</dt>
                <dd class="col-sm-8">@Model.Ilosc</dd>

                <dt class="col-sm-4 text-secondary">Cena jednostkowa</dt>
                <dd class="col-sm-8">@Model.CenaJednostkowa.ToString("F2") zł</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex gap-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-trash3-fill"></i> Usuń
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 shadow-sm">
                    <i class="bi bi-arrow-left-circle"></i> Anuluj
                </a>
            </form>
        </div>
    </div>

</div>
