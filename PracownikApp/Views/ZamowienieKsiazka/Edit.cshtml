@model AppData.Data.Sklep.ZamowienieKsiazka

@{
    ViewData["Title"] = "Edytuj pozycję zamówienia";
}

<div class="container py-5 min-vh-100">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-pencil-square me-2"></i> Edytuj pozycję zamówienia
        </h1>
        <p class="text-muted">Zmieniaj szczegóły wybranej pozycji zamówienia</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <form asp-action="Edit" novalidate>
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-4">
                    <label asp-for="ZamowienieID" class="form-label fw-semibold"></label>
                    <select asp-for="ZamowienieID" class="form-select form-select-lg" asp-items="ViewBag.ZamowienieID"></select>
                    <span asp-validation-for="ZamowienieID" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="KsiazkaID" class="form-label fw-semibold"></label>
                    <select asp-for="KsiazkaID" class="form-select form-select-lg" asp-items="ViewBag.KsiazkaID"></select>
                    <span asp-validation-for="KsiazkaID" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Ilosc" class="form-label fw-semibold"></label>
                    <input asp-for="Ilosc" type="number" class="form-control form-control-lg" />
                    <span asp-validation-for="Ilosc" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="CenaJednostkowa" class="form-label fw-semibold"></label>
                    <input asp-for="CenaJednostkowa" type="number" step="0.01" class="form-control form-control-lg" />
                    <span asp-validation-for="CenaJednostkowa" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary btn-lg d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-check2-circle"></i> Zapisz zmiany
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-x-circle"></i> Anuluj
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
