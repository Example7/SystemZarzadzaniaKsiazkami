@model AppData.Data.Sklep.Kategoria

@{
    ViewData["Title"] = "Dodaj nową kategorię";
}

<div class="container py-5 min-vh-100">

    <div class="bg-primary bg-gradient text-white rounded-4 shadow-sm p-4 mb-4 text-center">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-plus-square me-2"></i> Dodaj nową kategorię
        </h1>
        <p class="mb-0">Wypełnij formularz, aby dodać nową kategorię do systemu</p>
    </div>

    <div class="card shadow-sm rounded-4 border-0 mx-auto" style="max-width: 600px;">
        <div style="height: 8px; background: linear-gradient(90deg, #0d6efd, #0a58ca);" class="rounded-top"></div>
        <div class="card-body">

            <form asp-action="Create" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nazwa" class="form-label"></label>
                    <input asp-for="Nazwa" class="form-control" />
                    <span asp-validation-for="Nazwa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Opis" class="form-label"></label>
                    <input asp-for="Opis" class="form-control" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-check2-circle"></i> Dodaj kategorię
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2 shadow-sm">
                        <i class="bi bi-arrow-left-circle"></i> Powrót do listy
                    </a>
                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
