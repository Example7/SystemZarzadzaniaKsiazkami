@{
    ViewData["Title"] = "Logowanie";
}

<div class="container-fluid pt-5 pb-1" style="max-width: 400px;">
    <h2 class="mb-4 text-center">Logowanie</h2>

    <form method="post" asp-action="Login" asp-controller="Account">
        <div class="mb-3">
            <input type="email" name="email" placeholder="Email" class="form-control" required />
        </div>
        <div class="mb-3">
            <input type="password" name="password" placeholder="Hasło" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Zaloguj się</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p class="mb-0">@error.ErrorMessage</p>
            }
        </div>
    }

    <p class="mt-3 text-center">
        Nie masz konta? <a asp-controller="Account" asp-action="Register">Zarejestruj się</a>
    </p>

</div>

@await Component.InvokeAsync("PomocIPrywatnosc")

<hr class="my-4" />

@await Component.InvokeAsync("PoradyLogowania")

<hr class="my-4" />

@await Component.InvokeAsync("Faq")