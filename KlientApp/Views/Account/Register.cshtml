@{
    ViewData["Title"] = "Rejestracja";
}

<div class="container-fluid py-5" style="max-width: 400px;">
    <h2 class="mb-4 text-center">Rejestracja</h2>

    <form method="post" asp-action="Register" asp-controller="Account">
        <div class="mb-3">
            <input type="email" name="email" placeholder="Email" class="form-control" required />
        </div>
        <div class="mb-3">
            <input type="password" name="password" placeholder="Hasło" class="form-control" required />
        </div>
        <div class="mb-3">
            <input type="text" name="imie" placeholder="Imię" class="form-control" />
        </div>
        <div class="mb-3">
            <input type="text" name="nazwisko" placeholder="Nazwisko" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success w-100">Zarejestruj się</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p class="mb-0">@error.ErrorMessage</p>
            }
        </div>
    }

    <p class="mt-3 text-center">
        Masz już konto? <a asp-controller="Account" asp-action="Login">Zaloguj się</a>
    </p>
</div>

@await Component.InvokeAsync("PomocIPrywatnosc")

<hr class="my-4" />

@await Component.InvokeAsync("PoradyLogowania")

<hr class="my-4" />

@await Component.InvokeAsync("Faq")