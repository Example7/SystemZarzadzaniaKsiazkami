@model HeroViewModel

<div class="row align-items-center" style="min-height: 80vh;">
    <div class="col-12 col-md-6 d-flex flex-column justify-content-center px-4">
        <h1 class="fw-bold">@Model.Title</h1>
        <p class="lead">@Model.Description</p>

        <div class="d-flex align-items-center me-3 mb-2">
            <i class="fas fa-book-open fa-lg text-primary me-2"></i>
            <span>@Model.Benefit1</span>
        </div>
        <div class="d-flex align-items-center me-3 mb-2">
            <i class="fas fa-shipping-fast fa-lg text-primary me-2"></i>
            <span>@Model.Benefit2</span>
        </div>
        <div class="d-flex align-items-center me-3 mb-2">
            <i class="fas fa-star fa-lg text-primary me-2"></i>
            <span>@Model.Benefit3</span>
        </div>

        <div class="mt-4 d-flex gap-3 flex-wrap">
            <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Produkty">
                Przeglądaj &#8594;
            </a>
        </div>
    </div>
    <div class="col-12 col-md-6 px-4 d-flex justify-content-center">
        <img src="@Url.Content(Model.ImagePath)" alt="Hero Image" style="max-width: 100%; height: auto; border-radius: 12px; box-shadow: 0 8px 20px rgba(0,0,0,0.2);" />
    </div>
</div>
