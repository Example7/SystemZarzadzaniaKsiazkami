@model KategorieViewModel

<div class="container">
	<h2 class="text-center my-5 text-black fw-bold border-bottom border-3 border-info pb-2">@Model.Naglowek</h2>
	<div class="row mb-4">
        @{
            var i = 1;
        }

        @foreach (var item in Model.Kategorie)
        {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
                <div class="card mx-auto" style="width: 18rem;">
                    <img src="@Url.Content($"~/content/bookCategory{i}.jpeg")" class="card-img-top" alt="Kategoria @i" style="height: 250px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nazwa</h5>
                        <p class="card-text">@item.Opis</p>
                        <a href="#" class="btn btn-primary">Przeglądaj</a>
                    </div>
                </div>
            </div>

            i++;
        }
	</div>
</div>