@model ONasViewModel

<div class="container-fluid py-5">
	<div class="container">
		<div class="row align-items-center mb-5 py-5">
			<div class="col-md-6 mb-4 mb-md-0">
				<img src="~/content/aboutUs.jpeg" class="img-fluid rounded shadow-sm" alt="O nas" />
			</div>
			<div class="col-md-6">
				<h2 class="fw-bold mb-4">@Model.Naglowek</h2>
				<p class="text-body-emphasis fs-5 mb-3">@Model.Akapit1</p>
				<p class="text-body-emphasis fs-5 mb-4">@Model.Akapit2</p>
				<a class="btn btn-primary px-4 py-2" asp-controller="Home" asp-action="Kontakt">@Model.ContactButtonText</a>
			</div>
		</div>

		<div class="row text-center mb-5">
			<h3 class="fw-bold mb-4">@Model.SectionValuesHeader</h3>

			@for (int i = 0; i < Model.Wartosci.Count; i++)
			{
				<div class="col-md-4 mb-4">
					<div class="p-4 border rounded shadow-sm h-100">
						@if (i == 0)
						{
							<i class="fas fa-book fa-3x text-primary mb-3"></i>
						}
						else if (i == 1)
						{
							<i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
						}
						else if (i == 2)
						{
							<i class="fas fa-headset fa-3x text-primary mb-3"></i>
						}
						<h5 class="fw-semibold">@Model.Wartosci[i].Tytul</h5>
						<p class="text-body">@Model.Wartosci[i].Tresc</p>
					</div>
				</div>
			}
		</div>

		<div class="row mb-5">
			<div class="col text-center">
				<blockquote class="blockquote fs-5 fst-italic">
					<p class="mb-2">"@Model.Cytat"</p>
					<footer class="blockquote-footer text-muted">- @Model.CytatAutor</footer>
				</blockquote>
			</div>
		</div>


		<div class="row text-center">
			@foreach (var statystyka in Model.Statystyki)
			{
				<div class="col-md-3 mb-3">
					<h2 class="fw-bold text-primary">@statystyka.Liczba</h2>
					<p class="text-body-emphasis">@statystyka.Opis</p>
				</div>
			}
		</div>

	</div>
</div>
