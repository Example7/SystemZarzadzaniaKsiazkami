@model List<KlientApp.Models.RecenzjaViewModel>

<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold">@ViewData["Naglowek"]</h2>
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 rounded-4">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="text-center mb-3">
                            <i class="fas fa-user-circle fa-3x text-secondary mb-2"></i>
                        </div>
                        <blockquote class="blockquote text-center mb-3">
                            <p class="fst-italic text-muted">
                                <i class="fa-solid fa-quote-left text-primary me-1"></i>
                                @item.Tresc
                                <i class="fa-solid fa-quote-right text-primary ms-1"></i>
                            </p>
                        </blockquote>
                        <p class="text-center text-secondary fst-italic mb-3">
                            Recenzja książki: <strong>@item.KsiazkaTytul</strong>
                        </p>
                        <div class="text-warning text-center mb-3">
                            @for (int i = 0; i < item.Ocena; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                            @for (int i = 0; i < 5 - item.Ocena; i++)
                            {
                                <i class="far fa-star"></i>
                            }
                        </div>
                        <footer class="blockquote-footer text-center fw-semibold text-dark">
                            @item.Autor
                        </footer>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
