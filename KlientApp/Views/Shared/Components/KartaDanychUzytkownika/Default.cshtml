@model KontoViewModel

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h4 class="card-title mb-3">@Model.NaglowekTwojeDane</h4>
        <div class="row">
            <div class="col-md-4 mb-3">
                <i class="fas fa-user fa-2x text-primary mb-1"></i>
                <p class="mb-0"><strong>Imię:</strong><br />@(string.IsNullOrEmpty(Model.Imie) ? "Brak danych" : Model.Imie)</p>
            </div>
            <div class="col-md-4 mb-3">
                <i class="fas fa-user fa-2x text-primary mb-1"></i>
                <p class="mb-0"><strong>Nazwisko:</strong><br />@(string.IsNullOrEmpty(Model.Nazwisko) ? "Brak danych" : Model.Nazwisko)</p>
            </div>
            <div class="col-md-4 mb-3">
                <i class="fas fa-calendar-alt fa-2x text-primary mb-1"></i>
                <p class="mb-0">
                    <strong>Data rejestracji:</strong><br />
                    @(Model.DataRejestracji.HasValue && Model.DataRejestracji != default(DateTime)
                        ? Model.DataRejestracji.Value.ToString("dd.MM.yyyy HH:mm:ss")
                        : "Brak danych")
                </p>
            </div>
        </div>
    </div>
</div>
